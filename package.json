{
  "name": "clique-graphql-server",
  "version": "0.0.1",
  "description": "Clique GraphQL Server",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "prebuild": "yarn run clean",
    "clean": "rimraf ./dist",
    "test": "NODE_ENV=test ava --color",
    "test:coverage": "NODE_ENV=test nyc ava",
    "preprod": "yarn run build",
    "prod": "NODE_ENV=production node -r tsconfig-paths/register dist/index.js",
    "start": "NODE_ENV=development nodemon src/index.ts",
    "lint": "tslint src/**/*",
    "cli": "ts-node -r tsconfig-paths/register bin/cli.ts",
    "docker:start": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:build": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml build --no-cache --force-rm"
  },
  "dependencies": {
    "aguid": "2.0.0",
    "apollo-server": "2.1.0",
    "apollo-server-hapi": "2.0.0-rc.10",
    "boom": "7.2.0",
    "chance": "1.0.16",
    "class-transformer": "0.1.9",
    "class-transformer-validator": "0.6.0",
    "class-validator": "0.9.1",
    "dotenv": "6.0.0",
    "fs": "0.0.1-security",
    "good": "8.1.0",
    "good-console": "7.1.0",
    "good-squeeze": "5.0.2",
    "good-winston": "4.0.0",
    "graphql-redis-subscriptions": "2.0.0",
    "hapi": "17.4.0",
    "hapi-auth-jwt2": "8.1.0",
    "hapi-qs": "2.0.1",
    "hapi-swagger": "9.1.1",
    "inert": "5.1.0",
    "ioredis": "4.2.0",
    "jsonwebtoken": "8.3.0",
    "lodash": "4.17.11",
    "nconf": "0.10.0",
    "path": "0.12.7",
    "pg": "7.5.0",
    "redis": "2.8.0",
    "reflect-metadata": "0.1.12",
    "type-graphql": "0.15.0",
    "typedi": "0.7.2",
    "typeorm": "0.2.7",
    "typeorm-typedi-extensions": "0.2.1",
    "vision": "5.3.2",
    "winston": "2.4.4"
  },
  "devDependencies": {
    "@types/boom": "7.2.0",
    "@types/chance": "1.0.1",
    "@types/dotenv": "4.0.3",
    "@types/hapi": "17.0.11",
    "@types/ioredis": "4.0.3",
    "@types/joi": "13.0.8",
    "@types/jsonwebtoken": "7.2.6",
    "@types/lodash": "4.14.117",
    "@types/nconf": "0.0.37",
    "@types/node": "9.4.7",
    "@types/pluralize": "0.0.29",
    "@types/supertest": "2.0.6",
    "ava": "1.0.0-rc.1",
    "graphql-json-schema": "0.1.2",
    "meow": "5.0.0",
    "nodemon": "1.18.4",
    "nyc": "13.0.1",
    "rimraf": "2.6.2",
    "supertest": "3.3.0",
    "ts-graphql-plugin": "1.1.2",
    "ts-node": "7.0.0",
    "tsconfig-paths": "^3.6.0",
    "tslint": "5.11.0",
    "tslint-consistent-codestyle": "1.13.3",
    "tslint-eslint-rules": "5.4.0",
    "typescript": "3.0.3"
  },
  "engines": {
    "node": "10"
  },
  "bin": {
    "clique": "./bin/cli.ts"
  }
}
