{
  "extends": [
    "tslint:recommended",
    "tslint-consistent-codestyle",
    "tslint-eslint-rules"
  ],
  "jsRules": {
    "curly": false,
    "object-literal-sort-keys": false,
    "file-header": [true, "\\w", "File summary..."],
    "variable-name": [true, "ban-keywords", "check-format", "allow-leading-underscore"],
    "align": [true, "parameters", "statements"],
    "trailing-comma": [true, {
      "multiline": "always",
      "singleline": "never"
    }],
    "no-duplicate-imports": true,
    "linebreak-style": [true, "LF"],
    "ter-indent": [true, 2],
    "triple-equals": true,
    "no-var-keyword": true,
    "quotemark": [true, "single", "avoid-escape", "avoid-template"],
    "ordered-imports": true,
    "jsdoc-format": true,
    "prefer-const": true,
    "no-empty": true,
    "semicolon": [true, "always"],
    "array-bracket-spacing": [
      true,
      "never",
      {
        "singleValue": false,
        "objectsInArrays": false,
        "arraysInArrays": false
      }
    ],
    "block-spacing": [true, "always"],
    "brace-style": [true, "1tbs", {
      "allowSingleLine": true
    }],
    "handle-callback-err": [true, "err"],
    "no-constant-condition": true,
    "no-control-regex": true,
    "no-duplicate-case": true,
    "no-empty-character-class": true,
    "no-ex-assign": true,
    "no-extra-boolean-cast": true,
    "no-extra-semi": true,
    "no-inner-declarations": [true, "both"],
    "no-invalid-regexp": true,
    "no-irregular-whitespace": true,
    "no-regex-spaces": true,
    "no-sparse-array": true,
    "no-unexpected-multiline": true,
    "use-isnan": true,
    "valid-jsdoc": true,
    "valid-typeof": true,
    "no-unused": [
      true,
      "unused-class-expression-name",
      "unused-function-expression-name",
      "unused-catch-binding"
    ],
    "ext-curly": true,
    "no-as-type-assertion": true,
    "no-accessor-recursion": true,
    "no-collapsible-if": true,
    "no-return-undefined": true,
    "no-unnecessary-else": true,
    "no-var-before-return": true,
    "parameter-properties": [
      true,
      "leading",
      "member-access"
    ]
  },
  "rules": {
    "curly": false,
    "object-literal-sort-keys": false,
    "quotemark": [true, "single"],
    "no-import-side-effect": false,
    "no-default-export": false,
    "ter-indent": [true, 2],
    "no-console": { "severity": "warning" }
  },
  "rulesDirectory": [],
  "linterOptions": {
    "exclude": [
      "dist/**/*"
    ]
  }
}
