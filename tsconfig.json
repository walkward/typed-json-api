{
  "compileOnSave": true,
  "compilerOptions": {
    "strictNullChecks": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "removeComments": true,
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "outDir": "dist",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "sourceMap": true,
    "baseUrl": ".",
    "allowJs": true,
    "checkJs": true,
    "lib": [
      "esnext.asynciterable",
      "es2015.promise",
      "es2017",
      "dom"
    ],
    "paths": {
      "app/*": [
        "src/*",
        "dist/*"
      ],
      "*": [ "src/types/*" ]
    },
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ]
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
